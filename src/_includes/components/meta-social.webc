<script webc:type="js">
	const descText = description ?? $data.site.description;
	const titleText = title ?? $data.site.title;

	`<meta property="og:title" content="${titleText}">
		<meta name="description" property="og:description" content="${descText}">
		<meta name="author" content="${$data.site.author.name}">`;
</script>
